    <servlet>
        <servlet-name>ComprasServlet</servlet-name>
        <servlet-class>servlets.ComprasServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RelatoriosServlet</servlet-name>
        <servlet-class>servlets.RelatoriosServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeletarUsuarioServlet</servlet-name>
        <servlet-class>smdcommerce.usuario.controller.DeletarUsuarioServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AtualizaUsuarioServlet</servlet-name>
        <servlet-class>smdcommerce.usuario.controller.AtualizaUsuarioServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginClienteServlet</servlet-name>
        <url-pattern>/LoginClienteServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NovoClienteServlet</servlet-name>
        <url-pattern>/NovoClienteServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PerfilServlet</servlet-name>
        <url-pattern>/PerfilServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CategoriaServlet</servlet-name>
        <url-pattern>/CategoriaServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProdutoServlet</servlet-name>
        <url-pattern>/ProdutoServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ComprasServlet</servlet-name>
        <url-pattern>/ComprasServlet</url-pattern>
    </servlet-mapping>
