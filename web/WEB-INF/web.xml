        <servlet-name>RelatoriosServlet</servlet-name>
        <url-pattern>/RelatoriosServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeletarUsuarioServlet</servlet-name>
        <url-pattern>/DeletarUsuarioServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AtualizaUsuarioServlet</servlet-name>
        <url-pattern>/AtualizaUsuarioServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
