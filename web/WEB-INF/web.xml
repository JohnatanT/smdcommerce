    <servlet>
        <servlet-name>LoginClienteServlet</servlet-name>
        <servlet-class>servlets.LoginClienteServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NovoClienteServlet</servlet-name>
        <servlet-class>smdcommerce.usuario.controller.NovoClienteServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>servlets.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PerfilServlet</servlet-name>
        <servlet-class>servlets.PerfilServlet</servlet-class>
